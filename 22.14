  static void Task_2_14()
        {
            Console.WriteLine("\n=== Задание 2.14 ===");
            Console.Write("Введите первый катет: ");
            double cathetus1 = Convert.ToDouble(Console.ReadLine());
            Console.Write("Введите второй катет: ");
            double cathetus2 = Convert.ToDouble(Console.ReadLine());
            
            double hypotenuse = Math.Sqrt(Math.Pow(cathetus1, 2) + Math.Pow(cathetus2, 2));
            Console.WriteLine($"Гипотенуза: {hypotenuse:F2}");
        }
