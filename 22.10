 static void Task_2_10()
        {
            Console.WriteLine("\n=== Задание 2.10 ===");
            Console.Write("Введите первое целое число: ");
            int num1 = Convert.ToInt32(Console.ReadLine());
            Console.Write("Введите второе целое число: ");
            int num2 = Convert.ToInt32(Console.ReadLine());
            
            double average = (num1 + num2) / 2.0;
            double geometricMean = Math.Sqrt(num1 * num2);
            
            Console.WriteLine($"а) Среднее арифметическое: {average:F2}");
            Console.WriteLine($"б) Среднее геометрическое: {geometricMean:F2}");
        }
