 static void Task_2_15()
        {
            Console.WriteLine("\n=== Задание 2.15 ===");
            Console.Write("Введите внешний радиус кольца: ");
            double R = Convert.ToDouble(Console.ReadLine());
            Console.Write("Введите внутренний радиус кольца: ");
            double r = Convert.ToDouble(Console.ReadLine());
            
            if (R > r && r >= 0)
            {
                double area = Math.PI * (Math.Pow(R, 2) - Math.Pow(r, 2));
                Console.WriteLine($"Площадь кольца: {area:F2}");
            }
            else
            {
                Console.WriteLine("Ошибка: внешний радиус должен быть больше внутреннего!");
            }
        }
