  static void Task_2_1()
        {
            Console.WriteLine("\n=== Задание 2.1 ===");
            
            // а) y = 17x² – 6x + 13
            Console.Write("Введите x для функции y = 17x² – 6x + 13: ");
            double x = Convert.ToDouble(Console.ReadLine());
            double y = 17 * Math.Pow(x, 2) - 6 * x + 13;
            Console.WriteLine($"а) y = {y:F2}");
            
            // б) y = 3a² + 5a – 21
            Console.Write("Введите a для функции y = 3a² + 5a – 21: ");
            double a = Convert.ToDouble(Console.ReadLine());
            y = 3 * Math.Pow(a, 2) + 5 * a - 21;
            Console.WriteLine($"б) y = {y:F2}");
        }
